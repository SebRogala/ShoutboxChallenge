{% extends 'base.html.twig' %}

{% block title %}Shoutbox Challenge!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper"
        {{ react_component('Shoutbox', {
            mercure: mercure(app.request.server.get('MERCURE_MESSAGE_TOPIC_NAME')),
            sendMessageUrl: path('app_new_message'),
            initialMessages: messages
        }) }}>
    </div>
{% endblock %}
